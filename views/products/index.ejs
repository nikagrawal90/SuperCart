<%- include("../partials/header") %>

<div class="container jumbotron">
    <div class="container">
        <h2 class="text-muted">View Our Hand Picked Collection</h2>
    </div>
    <div>
        <% if(currentUser && currentUser.role === 'admin'){ %>
            <a href="/products/<%= category %>/new" class="btn btn-lg btn-primary">Add New Product</a>
        <% } %>
    </div>
</div>

<div class='container'>
    <div class="row">
        <div class='col-md-3'>
            <p class="lead">Our Collection!</p>
            <div class='list-group'>
                <a href="/products/fashion"><li class="list-group-item" id="fashion">Fashion</li></a>
                <a href="/products/electronics"><li class="list-group-item" id="electronics">Electronics</li></a>
                <a href="/products/sports"><li class="list-group-item" id="sports">Sports</li></a>
                <a href="/products/books"><li class="list-group-item" id="books">Books</li></a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <% products.forEach(function(product){ %>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <a href="/products/<%=product.category%>/<%=product._id%>">
                            <div class="img-thumbnail" >
                                <img class="image" src="<%= product.image %>">
                                <div class="caption">
                                    <h4><%=product.name%></h4>
                                    <p class="pull-right">$ <%=product.price%></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<script>document.getElementById("<%=category%>").classList.add('active')</script>
<%- include("../partials/footer") %>