<%- include("../partials/header") %>

<div class='container'>
    <a class='btn btn-lg btn-primary pull-right' href='/products'>Shop More!</a>
    <h1>Profile</h1>
</div>

<div class='container'>
    <div class='row'>
        <div class='col-md-3'>
            <div>
                <img class='image' src='<%=currentUser.image%>'>
            </div>
        </div>
        <div class='col-md-9'>
            <form action="/profile?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" value="<%= currentUser.username %>" readonly>
                </div>
                <div class="form-group">
                    <lable>Role</lable>
                    <input class="form-control" value="<%= currentUser.role %>" readonly>
                </div>
                <div class="form-group">
                    <lable>Address</lable>
                    <input class="form-control" type="text" name="user[address]" value="<%= currentUser.address %>">
                </div>
                <div class="form-group">
                    <lable>Your Image</lable>
                    <input class="form-control" type="text" name="user[image]" value="<%= currentUser.image %>">
                </div>
                <div class="form-group">
                    <button class='btn btn-lg btn-primary'>Submit</button>
                    <a class='btn btn-lg btn-danger' href="/profile">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>